@model FizzBuzzMVCPractice.Models.FizzBuzz
<div class="container mt-5">
    <div class="row row-cols-1 row-cols-lg-2">
        <div class="col col-lg-4 border-end border-3">
            <h1>FIZZ BUZZ: A Coding Project</h1>
            <p>
                A Javascript coding exercise that uses loops.
                A program that prints numbers from 1 to 100. Multiples of 3 will be
                displayed "Fizz", Multiple of 5 will be displayed "Buzz". Multiple of the two will be displayed
                "FizzBuzz
            </p>
            <h1>Instructions</h1>
            <p>Enter two inputs using the section to the right. The program will display the results.</p>
        </div>
        <div class="col col-lg-8">
            <form class="row gx-2 gy-2" method="post">
                <h3>Enter Value</h3>
                <div class="col">
                    <label asp-for="FizzValue">Fizz Value</label>
                    <input asp-for="FizzValue" type="number" class="form-control" placeholder="Enter Fizz value"
                           aria-label="Enter Fizz Value" value=@Model.FizzValue>
                </div>
                <div class="col">
                    <label asp-for="BuzzValue"></label>
                    <input asp-for="BuzzValue" type="number" class="form-control" placeholder="Enter Buzz Value"
                           aria-label="Enter Buzz Value" value=@Model.BuzzValue>
                </div>
                <div class="d-flex mt-2 justify-content-end">
                    <button id="btnSubmit" type="submit" class="btn btn-primary">Let's run it</button>
                </div>
            </form>
            
            
            <h3>Results</h3>
            <div class="table-responsive">
                @if (@Model.results.Count > 0)
                {
                    for (int i = 0; i <= @Model.results.Count; i += 5)
                    {
                        <table class="table table-striped table-sm">
                            <tbody id="results">
                                <tr>
                                    <td>@Model.results[i]</td>
                                    <td>@Model.results[i+1]</td>
                                    <td>@Model.results[i+2]</td>
                                    <td>@Model.results[i+3]</td>
                                    <td>@Model.results[i+4]</td>
                                </tr>
                            </tbody>
                        </table>
                    }


                }

            </div>
        </div>
    </div>
</div>
 